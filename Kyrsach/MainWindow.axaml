<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kyrsach"
        mc:Ignorable="d" 
        x:Class="Kyrsach.MainWindow"
        x:CompileBindings="False"
        Title="Kyrsach">
    
    <Window.Resources>
        <local:DiscountToVisibilityConverter x:Key="DiscountConverter"/>
    </Window.Resources>

    <DockPanel>
        <!-- Панель управления -->
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Spacing="10" Margin="10">
            <TextBox x:Name="SearchTextBox" Width="200" Watermark="Поиск..." 
                     TextChanged="OnSearchTextChanged"/>
            <ComboBox x:Name="DiscountFilterComboBox" Width="130" SelectedIndex="0">
                <ComboBoxItem>Все скидки</ComboBoxItem>
                <ComboBoxItem>0-5%</ComboBoxItem>
                <ComboBoxItem>5-15%</ComboBoxItem>
                <ComboBoxItem>15-30%</ComboBoxItem>
                <ComboBoxItem>30-70%</ComboBoxItem>
                <ComboBoxItem>70-100%</ComboBoxItem>
            </ComboBox>
            <ComboBox x:Name="SortComboBox" Width="200" SelectedIndex="0">
                <ComboBoxItem>Без сортировки</ComboBoxItem>
                <ComboBoxItem>По возрастанию цены</ComboBoxItem>
                <ComboBoxItem>По убыванию цены</ComboBoxItem>
            </ComboBox>
        </StackPanel>

        <!-- Список услуг -->
        <ListBox x:Name="ServiceBox" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
    <ListBox.ItemTemplate>
        <DataTemplate>
            <!-- Добавляем Background="{Binding Background}" -->
            <Border BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="4" Margin="5" 
                    Background="{Binding Background}" Padding="10">
                <Grid ColumnDefinitions="Auto,*" ColumnSpacing="10">
                    <!-- Изображение -->
                    <Image Grid.Column="0"
                           Source="{Binding Image}"
                           Width="120"
                           Height="120"
                           Stretch="UniformToFill"/>
                    
                    <!-- Информация -->
                    <StackPanel Grid.Column="1">
                        <!-- Название -->
                        <TextBlock Text="{Binding Title}" 
                                   FontWeight="Bold" 
                                   TextWrapping="Wrap"/>
                        
                        <!-- Блок цен -->
                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <!-- Старая цена с перечёркиванием -->
                            <TextBlock Text="{Binding OldPriceFormatted}"
                                       TextDecorations="Strikethrough"
                                       Foreground="Gray"
                                       IsVisible="{Binding HasDiscount}"/>
                                       
                            <!-- Стрелка между ценами -->
                            <TextBlock Text=" → " 
                                       IsVisible="{Binding HasDiscount}"/>
                                       
                            <!-- Новая цена -->
                            <TextBlock Text="{Binding NewPriceFormatted}"/>
                        </StackPanel>
                        
                        <!-- Скидка (под ценой) -->
                        <TextBlock Text="{Binding DiscountFormatted}"
                                   Foreground="White"
                                   Margin="0,2,0,5"
                                   IsVisible="{Binding HasDiscount}"/>
                        
                        <!-- Описание -->
                        <TextBlock Text="{Binding Description}"
                                   Margin="0,5"
                                   TextWrapping="Wrap"
                                   Foreground="#666"/>
                    </StackPanel>
                </Grid>
            </Border>
        </DataTemplate>
    </ListBox.ItemTemplate>
</ListBox>
    </DockPanel>
</Window>