<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Kyrsach.EditServiceWindow"
        x:CompileBindings="False"
        Title="Редактирование услуги"
        Width="400"
        SizeToContent="Height">
    <StackPanel Margin="15" Spacing="10">
        <TextBlock Text="Название:"/>
        <TextBox Text="{Binding EditedService.Title}"/>
        
        <TextBlock Text="Стоимость:"/>
        <NumericUpDown Value="{Binding EditedService.Cost}"/>
        
        <TextBlock Text="Длительность (мин):"/>
        <NumericUpDown Value="{Binding EditedService.DurationInMinutes}"
                       Minimum="1" Maximum="240"/>
        
        <TextBlock Text="Скидка (%):"/>
        <NumericUpDown Value="{Binding EditedService.Discount}"
                       Minimum="0" Maximum="100"/>
        
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10">
            <Button Content="Отмена" Click="Cancel_Click"/>
            <Button Content="Сохранить" Click="Save_Click" Background="#FFDDDDDD"/>
        </StackPanel>
    </StackPanel>
</Window>