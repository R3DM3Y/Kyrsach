<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="400"
        x:Class="Kyrsach.AddAppointmentWindow"
        x:CompileBindings="False"
        Title="AddAppointmentWindow">
    <StackPanel Margin="15" Spacing="10">
        <TextBlock Text="Услуга:" FontWeight="Bold"/>
        <TextBlock x:Name="ServiceNameText" FontWeight="Bold"/>
        
        <TextBlock Text="Длительность:"/>
        <TextBlock x:Name="DurationText"/>

        <TextBlock Text="Клиент:" Margin="0,10,0,0"/>
        <ComboBox x:Name="ClientComboBox"
                  ItemsSource="{Binding Clients}"
                  SelectedItem="{Binding SelectedClient}">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding LastName}"/>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>

        <Grid ColumnDefinitions="*,*" Margin="0,10">
            <StackPanel Grid.Column="0">
                <TextBlock Text="Дата:"/>
                <CalendarDatePicker SelectedDate="{Binding SelectedDate}"
                                    DisplayDate="{Binding SelectedDate}"
                                    Margin="0,5"/>
            </StackPanel>
            <StackPanel Grid.Column="1" Margin="10,0,0,0">
                <TextBlock Text="Время (ЧЧ:ММ):"/>
                <TextBox Text="{Binding TimeText}"
                         Watermark="14:00"
                         Margin="0,5"/>
            </StackPanel>
        </Grid>

        <TextBlock Text="Примечания:"/>
        <TextBox x:Name="NotesTextBox" 
                 AcceptsReturn="True" 
                 Height="60"
                 Watermark="Дополнительная информация"/>

        <StackPanel Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Spacing="10" Margin="0,15">
            <Button Content="Отмена" Width="100" Click="CancelButton_Click"/>
            <Button Content="Сохранить" Width="100" Click="SaveButton_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
